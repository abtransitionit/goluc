package chart

import (
	"fmt"

	"github.com/abtransitionit/gocore/logx"
	"github.com/abtransitionit/gocore/ui"
	"github.com/abtransitionit/golinux/mock/k8scli/helm"
	"github.com/abtransitionit/goluc/internal"
	"github.com/spf13/cobra"
)

// Description
var buildSDesc = "build the chart's artifact from a chart directory"
var buildLDesc = buildSDesc + `
manage following use case:
	- the chart repository is on the local FS where the helm client is installed
`

// root Command
var buildCmd = &cobra.Command{
	Use:   "build",
	Short: buildSDesc,
	Long:  buildLDesc,
	Example: fmt.Sprintf(`
  # add helm repo from whitelist
  %[1]s build add bitnami
  `, internal.CliName),
	Run: func(cmd *cobra.Command, args []string) {

		// define ctx and logger
		logger := logx.GetLogger()
		logger.Info(buildSDesc)
		// ctx := context.Background()

		// TODO: Hard coded now - idea: pick a folder name in a proposed list inside a root folder
		// 1. Define the parameters in a map
		param := map[string]string{
			"folderSrcRoot": "$HOME/wkspc/git/k8s-manifest/helm-chart/",
			"folderDst":     "/tmp",
		}
		// 2 - Ask user
		resName := ui.AskUserString(fmt.Sprintf(`which chart folder to build (inside %s):`, param["folderSrcRoot"]))
		// log
		// logger.Debugf("cli is : %s", cli)

		// 3- get instance and operate
		i := helm.Resource{Type: helm.ResChart, Name: resName, Param: param}
		_, err := i.Build("local", "local", logger)
		if err != nil {
			logger.Errorf("%v", err)
			return
		}

	},
}
