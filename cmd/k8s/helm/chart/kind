package chart

import (
	"fmt"

	helm "github.com/abtransitionit/gocore/k8s-helm"
	"github.com/abtransitionit/gocore/list"
	"github.com/abtransitionit/gocore/logx"
	"github.com/abtransitionit/goluc/internal"
	"github.com/spf13/cobra"
)

var kindSDesc = "list the kind of object the chart will create into the K8s cluster."

// Parent command
var kindCmd = &cobra.Command{
	Use:   "listKind",
	Short: kindSDesc,
	Args: func(cmd *cobra.Command, args []string) error {
		if len(args) != 1 {
			return fmt.Errorf("❌ you must pass exactly 1 arguments, the full path name of the chart, got %d", len(args))
		}
		return nil
	},
	Example: fmt.Sprintf(`
  # list the kind of object that will be created in the cluster for the chart: cilium
  %[1]s chart listKind cilium
  `, internal.CliName),
	Run: func(cmd *cobra.Command, args []string) {
		// define ctx and logger
		logger := logx.GetLogger()
		logger.Info(kindSDesc)

		// define resource property from flag
		helmChartPath := args[0]

		// define object from the resource property
		helmChart := helm.HelmChart{FullName: helmChartPath}

		// create the chart
		output, err := helm.CreateChart(localFlag, "o1u", helmChart, logger)
		if err != nil {
			logger.Errorf("failed to build helm command: %v", err)
			return
		}

		// output
		list.PrettyPrintTable(output)

	},
}

//  helm template cilium/cilium | grep '^kind:' | sort | uniq -c | sort -nr
