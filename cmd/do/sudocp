package do

import (
	"context"
	"fmt"
	"os"
	"os/signal"

	"github.com/abtransitionit/gocore/logx"
	"github.com/abtransitionit/golinux/filex"
	"github.com/spf13/cobra"
)

// Package variables for CLI flags.

var sudocpSDesc = "cp file as sudo to a root location"
var sudocpLDesc = sudocpSDesc + "\n" + `
Example usage.

go run . do download <URL>
`

// the command
var sudocpCmd = &cobra.Command{
	Use:   "sudocp",
	Short: sudocpSDesc,
	Long:  sudocpLDesc,
	Args:  cobra.ExactArgs(2), // Require exactly one argument: the file location
	RunE: func(cmd *cobra.Command, args []string) error {
		src := args[0]
		dst := args[1]
		// get logger
		logger := logx.GetLogger()
		// Create a context to allow user to ctrl-c the download.
		ctx := context.Background()
		ctx, cancel := signal.NotifyContext(ctx, os.Interrupt)
		defer cancel()
		fileType, err := filex.CpAsSudo(ctx, logger, src, dst)
		if err != nil {
			return fmt.Errorf("%v", err)
		}

		fmt.Println(fileType)
		return nil
	},
}
